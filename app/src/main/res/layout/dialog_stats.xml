<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_square_rounded_light"
    android:padding="25dp"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Statistics"
                android:textColor="@color/color_black"
                android:fontFamily="@font/montserrat_black"
                android:gravity="center"
                android:textSize="16sp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/color_black"
                android:layout_marginVertical="10dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="Number of wins:"
                    android:textColor="@color/color_black"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/num_wins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/num_error"
                    android:textColor="@color/color_black"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="Number of losses:"
                    android:textColor="@color/color_black"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/num_loss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/num_error"
                    android:textColor="@color/color_black"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="Total number of plays:"
                    android:textColor="@color/color_black"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/num_plays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-1"
                    android:textColor="@color/color_black"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="12sp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/closure_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:clickable="true"
            android:focusable="true"
            >
            <include layout="@layout/layout_exit_circle"
                />
        </LinearLayout>
</RelativeLayout>